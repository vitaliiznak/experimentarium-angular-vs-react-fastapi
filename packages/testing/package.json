{
  "name": "@codebase/testing",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@playwright/test": "^1.42.0"
  },
  "scripts": {
    "test:e2e": "playwright test --config e2e/config/playwright.config.ts",
    "test:e2e:ui": "playwright test --config e2e/config/playwright.config.ts --ui",
    "test:e2e:debug": "playwright test --config e2e/config/playwright.config.ts --debug",
    "test:e2e:angular": "playwright test --config e2e/config/playwright.config.ts --project=angular",
    "test:e2e:react": "playwright test --config e2e/config/playwright.config.ts --project=react",
    "test:e2e:all": "playwright test --config e2e/config/playwright.config.ts --project=angular --project=react"
  }
} 